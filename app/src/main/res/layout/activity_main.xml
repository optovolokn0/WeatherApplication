<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".presentation.MainActivity">

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="@string/module_5_work"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.AppCompat.Body2"
		android:textSize="22sp"
		app:layout_constraintBottom_toTopOf="@+id/retrofit"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/retrofit"
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:layout_marginStart="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginRight="20dp"
		android:text="@string/retrofit"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/okhttp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.494"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView" />

	<Button
		android:id="@+id/okhttp"
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="16dp"
		android:text="@string/okhttp"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/retrofit" />

</androidx.constraintlayout.widget.ConstraintLayout>